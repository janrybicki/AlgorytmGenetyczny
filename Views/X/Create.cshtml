@model AlgorytmGenetyczny.Models.XModel

@{
    ViewData["Title"] = "Create";
}

<h1>Wprowadż dane używając przecinka jako separatora dziesiętnego</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RangeBeginning" class="control-label"></label>
                <input asp-for="RangeBeginning" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="RangeEnd" class="control-label"></label>
                <input asp-for="RangeEnd" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Accuracy" class="control-label"></label>
                <input asp-for="Accuracy" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control" />
            </div>
            
            <div class="form-group">
                <input type="submit" value="Wprowadź" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powrót do listy</a>
</div>

